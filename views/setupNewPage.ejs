<% if (page.user_id){ %><!--existed--><% } %>
<div class="card">
  <div class="card-header">
    Thêm Page <b><%= page.name %></b>
  </div>
  <div class="card-body card-block">
    <form action="javascript:sendPageData();" id="formAddPage">
      <input type="hidden" name="name" value="<%= page.name %>">
      <div class="form-group">
        <div class="form-group">
          <label class=" form-control-label">Page ID</label>
          <input name="page_id" class="form-control" value="<%= page.page_id %>" readonly required style="max-width:50%;">
        </div>
        <div class="form-group">
          <label class=" form-control-label">Loại Page</label>
          <input name="category" class="form-control" value="<%= page.category %>" readonly required style="max-width:50%;">
        </div>
        <div class="form-group">
          <label for="text-input" class="form-control-label">Số lượng like (1 coin / 1 like)</label>
          <input type="number" name="numOfLike" class="form-control" required value="<% if(page.numOfLike) { %><%= page.numOfLike %><% }else{ %>0<% } %>" style="max-width:25%;">
        </div>
        <div class="form-group" style="padding-left:25px;">
          <div class="checkbox">
            <label class="form-check-label">
              <input type="checkbox" name="rate" value="true" class="form-check-input" <% if(page.rate) { %>checked<% } %>> Like kèm rate 5★ (3 coin / 1 rate)
            </label>
          </div>
        </div>
      </div>
      <div class="form-actions form-group">
          <button type="submit" class="btn btn-primary btn-sm"> Tiếp <i class="fa fa-caret-right"></i></button>
      </div>
    </form>
  </div>
</div>
